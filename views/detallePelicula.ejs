<%- include('header') -%>
<div>
<h1><%= pelicula.title %> </h1>
 
<ul>
    <li>
        Duracion: <%= pelicula.length %> 
    </li>
    <li>
        Rating: <%= pelicula.rating %> 
    </li>
    <li>
        Awards: <%= pelicula.awards %> 
    </li>
    <li>
        Fecha de Estreno: <%= pelicula.release_date %> 
    </li>
    <li>
        Actores:
        <ul>
            <% for(let i = 0; i < pelicula.actores.length; i++) { %> 
                <li>
                    <%= pelicula.actores[i].first_name %> <%= pelicula.actores[i].last_name %> 
                </li>
            <% } %> 
        </ul> 
    </li>
    
</ul>
<a href="/movies/editar/<%= pelicula.id %> ">
    <button>Editar</button>
</a>
<form action="/movies/eliminar/<%= pelicula.id %>?_method=DELETE" method="POST">
    <button type="submit">Eliminar</button>
</form>
</div>
<%- include('footer') -%>