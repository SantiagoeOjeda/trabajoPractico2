<%- include('header') -%>



<h1>Edita tu Pelicula</h1>
    <form action="/movies/editar/<%= pelicula.id %>?_method=PUT " method="POST">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" value="<%= pelicula.title %> ">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" value="<%= pelicula.rating %> ">
        </div>
        <div>
            <label for="">Duraci√≥n</label>
            <input type="text" name="length" value="<%= pelicula.rating %> ">
        </div>
        <div>
            <label for="">Premios</label>
            <input type="text" name="premios" value="<%= pelicula.awards %> ">
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="fecha">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero" >
                <% for(let i= 0; i < generos.lenght; i++) { %>
                    <% if(generos[i].id == pelicula.genre_id) { %> 
                        <option value="<%= generos[i].id %>" selected>
                            <%= generos[i].name %> 
                        </option>
                        <% } else { %>
                            <option value="<%= generos[i].id %>">
                                <%= generos[i].name %> 
                            </option>
                        <% } %>  
                

            <% } %> 
            </select>
        </div>
        <button type="submit">Editar</button>
    </form>


<%- include('footer') -%>
